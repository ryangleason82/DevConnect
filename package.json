		"express": "^4.16.4",
		"gravatar": "^1.8.0",
		"jsonwebtoken": "^8.5.0",
		"mongoose": "^5.4.14",
		"passport": "^0.4.0",
		"passport-jwt": "^4.0.0",
		"prop-types": "^15.7.2",
		"validator": "^10.11.0"
	},
	"devDependencies": {
		"nodemon": "^1.18.10"
	}
